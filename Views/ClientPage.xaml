<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="kInvoice.Views.ClientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:kInvoice.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Spacing="20" Padding="20" Width="600" HorizontalAlignment="Left">
        <TextBlock Text="Dane nabywcy" Style="{StaticResource TitleTextBlockStyle}"/>
        <AutoSuggestBox x:Name="NameAutoSuggestBox" Header="Nazwa:"/>
        <TextBox x:Name="StreetTextBox" Header="Ulica:"/>
        <TextBox x:Name="ZipCodeCityTextBox" Header="Kod pocztowy i miejscowość:"/>
        <TextBox x:Name="NIPTextBox" Header="NIP:"/>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Dodaj do listy nabywców" Background="#755BB4" Foreground="#FFFFFF" FontWeight="Bold"/>
            <Button Content="Wyczyść" Background="#FF6CAB" Foreground="#FFFFFF" FontWeight="Bold"/>
        </StackPanel>
    </StackPanel>
</Page>
